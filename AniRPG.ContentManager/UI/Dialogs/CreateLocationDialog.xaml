<Window x:Class="AniRPG.ContentManager.UI.Dialogs.CreateLocationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AniRPG.ContentManager.UI.Dialogs"
        mc:Ignorable="d"
        Title="Создание локации" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <StackPanel>
            <TextBlock Text="Введите название локации:"/>
            <TextBox Name="LocationNameTextBox"/>
            <WrapPanel HorizontalAlignment="Right">
                <Button IsDefault="True" Content="Создать" Padding="5" Margin="5" Click="AcceptButtonClickedHandler"/>
                <Button IsCancel="True" Content="Отмена" Padding="5" Margin="5"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
